@model FiveStars.Models.Users
@{ ViewBag.Title = "My Profile";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>My Profile</h2>

<p>
    <strong>Name:</strong>
    @Model.FirstName @Model.LastName
</p>

<p>
    <strong>Email:</strong>
    @Model.Email
</p>

<p>
    <strong>Role:</strong>
    @(Model.Role ?? "customer")
</p>

<p>
    <strong>Status:</strong>
    @((Model.IsActive.HasValue && Model.IsActive.Value) ? "Active" : "Inactive")
</p>

<p>
    <strong>Joined:</strong>
    @(Model.CreatedAt.HasValue
        ? Model.CreatedAt.Value.ToString("dd.MM.yyyy HH:mm")
        : "N/A")
</p>

@if (!string.IsNullOrEmpty(Model.ProfileImagePath))
{
<img src="@Url.Content(Model.ProfileImagePath)"
     alt="Profile Image"
     style="max-width:150px;" />}

<br />
<a href="/Account/Logout" class="login-btn">Logout</a>
