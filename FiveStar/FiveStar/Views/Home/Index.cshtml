@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-movie-screen">
    <div class="trailer-content">
        <video class="trailer-video" muted loop playsinline>
            <source src="@Url.Content("~/videos/main-trailer.mp4")" type="video/mp4" />
            <img src="@Url.Content("~/images/Gemini_Generated_Image_50urx450urx450ur.jpg")"
                 alt="Trailer Poster" class="trailer-poster" />
        </video>

        <div class="play-overlay">
            <a href="#" class="play-button" aria-label="Play/Pause Trailer" id="play-pause-button">
                <i class="fas fa-play"></i>
            </a>
        </div>

        <a href="#" class="buy-ticket-btn">BUY TICKETS NOW</a>
    </div>
</div>

