        <div class="play-overlay">
            <a href="#" class="play-button" aria-label="Play/Pause Trailer" id="play-pause-button">
                <i class="fas fa-play"></i>
            </a>
        </div>

        <!-- Hero butonu: Movies/Index'e götürüyor -->
        <a href="@Url.Action("Index", "Movies")" class="buy-ticket-btn">
