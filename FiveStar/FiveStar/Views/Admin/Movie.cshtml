@model List<FiveStars.Models.Movie>

@{
    ViewBag.Title = "Movie Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Movie Management</h2>
        <a href="@Url.Action("CreateMovie", "Admin")" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Movie
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th>Release Date</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.MovieID</td>
                        <td>
                            @if (!string.IsNullOrEmpty(movie.PosterUrl))
                            {
                                <img src="@Url.Content("~/" + movie.PosterUrl)" class="img-thumbnail" style="width: 80px; height: auto;" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td><strong>@movie.Title</strong></td>
                        <td>@(movie.Duration_min?.ToString() + " min" ?? "-")</td>
                        <td>
                            <span class="badge @(movie.Status == "Now Showing" ? "badge-success" :
                                                movie.Status == "Coming Soon" ? "badge-info" : "badge-secondary")">
                                @movie.Status
                            </span>
                        </td>
                        <td>@(movie.ReleaseDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            @if (movie.Ratings.HasValue)
                            {
                                <span class="badge badge-primary">@movie.Ratings.Value.ToString("0.0")/10</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("EditMovie", "Admin", new { id = movie.MovieID })"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @using (Html.BeginForm("DeleteMovie", "Admin", new { id = movie.MovieID }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Are you sure you want to delete this movie?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>