@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Admin Dashboard</h2>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Movies</div>
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.TotalMovies</h4>
                    <p class="card-text">Total movies</p>
                    <a href="@Url.Action("Movies", "Admin")" class="btn btn-light">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Showtimes</div>
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.ActiveShowings</h4>
                    <p class="card-text">Active showtimes</p>
                    <a href="@Url.Action("Showtimes", "Admin")" class="btn btn-light">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Campaigns</div>
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.ActiveCampaigns</h4>
                    <p class="card-text">Active campaigns</p>
                    <a href="@Url.Action("Campaigns", "Admin")" class="btn btn-light">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Users</div>
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.TotalUsers</h4>
                    <p class="card-text">Registered users</p>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-light">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>