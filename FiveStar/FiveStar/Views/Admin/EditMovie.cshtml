@model FiveStars.Models.Movie

@{
    ViewBag.Title = "Edit Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Movie: @Model.Title</h2>

    @using (Html.BeginForm("EditMovie", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MovieID)

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Title)
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Duration_min)
                                    @Html.TextBoxFor(m => m.Duration_min, new { @class = "form-control", type = "number" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Ratings)
                                    @Html.TextBoxFor(m => m.Ratings, new { @class = "form-control", type = "number", step = "0.1" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Status)
                                    @Html.DropDownListFor(m => m.Status, new SelectList(new[] { "Now Showing", "Coming Soon", "Archived" }), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ReleaseDate)
                                    @Html.TextBoxFor(m => m.ReleaseDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.PosterFile)
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="posterFile" name="PosterFile">
                                <label class="custom-file-label" for="posterFile">Choose new poster image</label>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.PosterUrl))
                            {
                                <small class="form-text text-muted">Current: @Model.PosterUrl</small>
                                <div class="mt-2">
                                    <img src="@Url.Content("~/" + Model.PosterUrl)" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Actions</h5>
                        <button type="submit" class="btn btn-primary btn-block mb-2">
                            <i class="fas fa-save"></i> Update Movie
                        </button>
                        <a href="@Url.Action("Movies", "Admin")" class="btn btn-secondary btn-block">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $('.custom-file-input').on('change', function() {
            var fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    </script>
}