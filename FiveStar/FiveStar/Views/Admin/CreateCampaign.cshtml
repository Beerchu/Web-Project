@model FiveStars.Models.Campaigns

@{
    ViewBag.Title = "Create Campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Create New Campaign</h2>

    @using (Html.BeginForm("CreateCampaign", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        @*
                            We don't know the exact properties of Campaigns model here,
                            so we let MVC auto-generate editors for all scalar fields.
                            This avoids compile errors and still works with your EF model.
                        *@
                        @Html.EditorForModel()

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Actions</h5>

                        <button type="submit" class="btn btn-primary btn-block mb-2">
                            <i class="fas fa-save"></i> Save Campaign
                        </button>

                        <a href="@Url.Action("Campaigns", "Admin")" class="btn btn-secondary btn-block">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
