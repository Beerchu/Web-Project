@model List<FiveStars.Models.Showing>

@{
    ViewBag.Title = "Showtimes Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Showtimes Management</h2>
        <a href="@Url.Action("CreateShowtime", "Admin")" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Showtime
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Movie</th>
                    <th>Show Time</th>
                    <th>Price</th>
                    <th>Cinema & Hall</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var showing in Model)
                {
                    <tr>
                        <td>@showing.ShowingID</td>
                        <td><strong>@showing.MovieTitle</strong></td>
                        <td>
                            <strong>@showing.ShowTime.ToString("dd MMM yyyy")</strong><br>
                            <span class="text-muted">@showing.ShowTime.ToString("HH:mm")</span>
                        </td>
                        <td>
                            <span class="badge badge-success" style="font-size: 1em;">
                                @showing.TicketPrice.ToString("C")
                            </span>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(showing.CinemaName))
                            {
                                <span>@showing.CinemaName</span><br>
                                <small class="text-muted">@showing.HallType</small>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("EditShowtime", "Admin", new { id = showing.ShowingID })"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @using (Html.BeginForm("DeleteShowtime", "Admin", new { id = showing.ShowingID }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Are you sure you want to delete this showtime?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>