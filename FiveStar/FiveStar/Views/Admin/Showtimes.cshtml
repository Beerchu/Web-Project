@model IEnumerable<FiveStars.Models.Showings>

@{
    ViewBag.Title = "Showtimes Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Showtimes Management</h2>

<p>
    @Html.ActionLink("Create New Showtime", "CreateShowtime", null, new { @class = "btn btn-success" })
</p>

<a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary btn-block mt-2">
    <i class="fas fa-home"></i> Back to Dashboard
</a>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Show Time</th>
            <th>Movie</th>
            <th>Hall & Cinema</th>
            <th>Ticket Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var showing in Model)
        {
            <tr>
                <td>@showing.ShowingID</td>
                <td>
                    <strong>@showing.ShowTime.ToString("dd MMM yyyy")</strong><br>
                    <span class="text-muted">@showing.ShowTime.ToString("HH:mm")</span>
                </td>
                <td>
                    @if (showing.Movies != null)
                    {
                        <strong>@showing.Movies.Title</strong>
                    }
                    else if (showing.MovieID.HasValue)
                    {
                        <text>Movie ID: @showing.MovieID</text>
                    }
                    else
                    {
                        <text>No movie</text>
                    }
                </td>
                <td>
                    @if (showing.Halls != null)
                    {
                        @:Hall: @showing.Halls.HallType




                        if (showing.Halls.Cinemas != null)
                        {
                            <br>
                            <span class="text-muted">@showing.Halls.Cinemas.CinemaName</span>
                        }
                    }
                    else if (showing.HallID.HasValue)
                    {
                        <text>Hall ID: @showing.HallID</text>
                    }
                    else
                    {
                        <text>No hall</text>
                    }
                </td>
                <td>@showing.TicketPrice.ToString("C")</td>
                <td>
                    @Html.ActionLink("Edit", "EditShowtime", new { id = showing.ShowingID }, new { @class = "btn btn-warning btn-sm" })
                    @using (Html.BeginForm("DeleteShowtime", "Admin", new { id = showing.ShowingID }, FormMethod.Post, new { style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>