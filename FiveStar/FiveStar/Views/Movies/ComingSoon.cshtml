@{
    ViewBag.Title = "Coming Soon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="movie-listings-panel" style="margin-top: 120px;">
    <div class="section-header">
        <h2>Coming Soon to Theaters</h2>
    </div>

    <div class="movies-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 30px;">
        <div class="movie-item-yakinda" style="margin: 0;">
            <img src="@Url.Content("~/images/coming_soon_1.jpg")" alt="Deadpool & Wolverine" />
            <div class="overlay" data-date="JULY 26">DEADPOOL & WOLVERINE</div>
        </div>

        <div class="movie-item-yakinda" style="margin: 0;">
            <img src="@Url.Content("~/images/coming_soon_2.jpg")" alt="Joker: Folie à Deux" />
            <div class="overlay" data-date="OCT 4">JOKER: FOLIE À DEUX</div>
        </div>

        <div class="movie-item-yakinda" style="margin: 0;">
            <img src="@Url.Content("~/images/coming_soon_3.jpg")" alt="Moana 2" />
            <div class="overlay" data-date="NOV 27">MOANA 2</div>
        </div>

        <div class="movie-item-yakinda" style="margin: 0;">
            <img src="@Url.Content("~/images/coming_soon_4.jpg")" alt="Mufasa" />
            <div class="overlay" data-date="DEC 20">MUFASA</div>
        </div>

        <div class="movie-item-yakinda" style="margin: 0;">
            <img src="@Url.Content("~/images/coming_soon_5.jpg")" alt="Avatar 3" />
            <div class="overlay" data-date="DEC 2025">AVATAR 3</div>
        </div>

    </div>
</div>